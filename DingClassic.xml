<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
    <Frame name="DingClassicFrame" toplevel="true" parent="UIParent" movable="true" hidden="false">
        <Scripts>
            <OnLoad>
                DingClassic_OnLoad(self);
            </OnLoad>
            <OnEvent>
                DingClassic_OnEvent(self, event, ...);
            </OnEvent>
        </Scripts>
    </Frame>

    <!-- Add an Options Panel -->
    <Frame name="DingClassicOptionsPanel" parent="InterfaceOptionsFramePanelContainer">
        <Scripts>
            <OnLoad>
                DingClassic_OnLoad(self);
            </OnLoad>
        </Scripts>
        <CheckButton name="DingClassicOptionsPanelCheckbox">
            <Size>
                <AbsDimension x="24" y="24"/>
            </Size>
            <Anchors>
                <Anchor point="TOPLEFT">
                    <Offset>
                        <AbsDimension x="10" y="-10"/>
                    </Offset>
                </Anchor>
            </Anchors>
            <Scripts>
                <OnClick>
                    showDingMessages = self:GetChecked()
                </OnClick>
            </Scripts>
            <Text>
                <!-- Set your checkbox label here -->
                <AbsDimension x="200" y="24"/>
            </Text>
        </CheckButton>
    </Frame>
</Ui>
